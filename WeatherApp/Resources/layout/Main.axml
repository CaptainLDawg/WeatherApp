<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="@drawable/clearday">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lnBackground"
        android:weightSum="3"
        android:gravity="center"
        android:background="@drawable/clearday">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lnGrayColor"
            android:weightSum="3"
            android:gravity="center"
            android:background="@color/TransGray">
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout5"
                android:gravity="right"
                android:weightSum="2"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayout7"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp">
                    <Button
                        android:text="Forecast"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/btnForecast"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayout6"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_marginRight="5dp"
                    android:weightSum="2">
                    <Button
                        android:text="Help"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/btnHelp"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:id="@+id/linearLayout1"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_height="0dp"
                android:weightSum="5">
                <ImageView
                    android:src="@android:drawable/ic_menu_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/imgIcon"
                    android:layout_weight="4.5" />
                <TextView
                    android:text="Current Date"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblDate"
                    android:layout_weight="0.2"
                    android:typeface="sans"
                    android:gravity="center" />
                <TextView
                    android:text="Current Time"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblTime"
                    android:layout_weight="0.2"
                    android:typeface="sans"
                    android:gravity="center_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:id="@+id/linearLayout2"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_height="0dp">
                <TextView
                    android:text="0Â°"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblTemp"
                    android:gravity="center"
                    android:typeface="sans"
                    android:textSize="80dp" />
                <TextView
                    android:text="City details loading"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblCityName"
                    android:typeface="sans"
                    android:textSize="17dp"
                    android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:id="@+id/linearLayout3"
                android:layout_weight="1"
                android:weightSum="3"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:layout_height="0dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:weightSum="3"
                    android:id="@+id/linearLayout4"
                    android:layout_weight="2">
                    <TextView
                        android:text="@string/strHumidity"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/lblHumidity"
                        android:lines="2"
                        android:typeface="sans"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="20dp"
                        android:textSize="17dp" />
                    <TextView
                        android:text="@string/strFeelsLike"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:id="@+id/lblFeels"
                        android:layout_marginBottom="20dp"
                        android:layout_width="0dp"
                        android:textSize="17dp"
                        android:typeface="sans" />
                    <TextView
                        android:text="@string/WeatherCond"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:id="@+id/lblWeatherCond"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="0dp"
                        android:maxLines="3"
                        android:textSize="15dp"
                        android:typeface="sans" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>